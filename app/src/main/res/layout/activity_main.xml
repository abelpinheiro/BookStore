<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/empty_shelter_image"
            style="@style/main_activity_icon" />

        <TextView
            android:id="@+id/empty_title_text"
            style="@style/main_activity_empty_title"
            android:fontFamily="sans-serif-medium"
            android:text="@string/empty_view_title"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/empty_subtitle_text"
            style="@style/main_activity_empty_subtitle"
            android:fontFamily="sans-serif"
            android:text="@string/empty_view_subtitle"
            android:textAppearance="?android:textAppearanceSmall" />

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        style="@style/main_activity_fab"/>

</RelativeLayout>